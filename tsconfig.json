{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "target": "es2019",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "outDir": "dist-transpiled",
    "declarationDir": "dist/types",
    "removeComments": true,
    "sourceMap": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
